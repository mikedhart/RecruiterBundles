{% extends '::base.html.twig' %}

{% block body %}

<div class="container main">
    <div class="row">
        <div class="span12">
            <h1>New Payment</h1>
            
            <p>Your subscription is currently inactive, you must complete payment. The total amount is shown below:</p>
            
            <p>{{ currency }} {{ amount|number_format(2) }}</p>

            <form method="post" action="https://www.paypal.com/cgi-bin/webscr">                
                <input type="hidden" name="employer_id" value="{{ employer.id }}" />
                <input type="hidden" name="currency_code" value="{{ currency }}" />
                <input type="hidden" name="amount" value="{{ amount|number_format(2) }}" />
                <input type="hidden" name="cmd" value="_xclick" />
                <input type="hidden" name="return" value="{{ return }}" />
                <input type="hidden" name="item_name" value="Creatives R Us Subscription" />
                <input type="hidden" name="notify_url" value="{{ notify_url }}" />
                <input type="hidden" name="business" value="{{ business }}" />
                <input type="hidden" name="cmd" value="_xclick" />
                <input type="submit" class="crus-btn" />
            </form>
        </div><!-- span12 -->
    </div>
</div><!-- container -->

{% endblock %}