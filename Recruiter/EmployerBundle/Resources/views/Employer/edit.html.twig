{% extends 'RecruiterAdminPanelBundle::layout.html.twig' %}

{% block body %}

{% include "RecruiterEmployerBundle:Employer:search_modal.html.twig" %}

<div class="container main">
	<div class="row">
		<div class="span12">
		
			<h1>Editing {{ entity.employername }}</h1>

			<form action="{{ path('employers_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
			    {{ form_widget(edit_form) }}
			    <p>
			        <button class="btn btn-success" type="submit">Save</button>
			    </p>
			</form>
			
			<div class="btn-group">
		        <form action="{{ path('employers_delete', { 'id': entity.id }) }}" method="post">
		            {{ form_widget(delete_form) }}
		            <button class="btn btn-danger" type="submit">Delete</button>
		        </form>
			</div>
		</div><!-- span12 -->
	</div><!-- row -->
</div><!-- container -->

{% endblock %}
