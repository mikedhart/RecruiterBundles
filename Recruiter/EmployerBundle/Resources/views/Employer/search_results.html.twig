{% extends 'RecruiterAdminPanelBundle::layout.html.twig' %}

{% block body %}

{% include "RecruiterEmployerBundle:Employer:search_modal.html.twig" %}

<div class="container main">
	<div class="row">
		<div class="span8">
			<h1>Search Results</h1>
			
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>View</th>
					</tr>
				</thead>
				<tbody>
					{% for employer in employers %}
						<tr>
							<td>{{ employer.employername }}</td>
							<td><a target="_blank" href="{{ path("employers_show", {id: employer.id}) }}" title="View profile" class="btn">Profile</a></td>
						</tr>
					{% endfor %}
				</tbody>
			</table><!-- table -->
		</div><!-- span8 -->
		<div class="span4">
			{% include "RecruiterEmployerBundle:Employer:command.html.twig" %}
		</div><!-- span4 -->
	</div><!-- row -->
</div><!-- container -->

{% endblock %}